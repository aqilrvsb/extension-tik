{
  "manifest_version": 3,
  "name": "TikTok Order Exporter",
  "version": "2.1.2",
  "description": "Export TikTok Shop shipped orders with customer details to Excel/CSV - with live dashboard",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://seller-my.tiktok.com/*",
    "https://seller.tiktok.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://seller-my.tiktok.com/*",
        "https://seller.tiktok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
